@model CraftTech.WebUI.Areas.Admin.Models.Product.ProductCreateDto
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/Admin/Views/Layout/_AdminLayout.cshtml";
}

<br />
<h1>Ürün Ekleme Sayfası</h1>
<br />
<a href="/Admin/Product/Index/" class="btn btn-outline-info">Vazgeç</a>
<br />
<br />

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-group">
        @Html.Label("Ürün Adı:")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Title, "", new { @style = "color:red" })
        <br />
        @Html.Label("Ürün Açıklaması:")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
        <br />
        @Html.Label("Banner Görseli:")
        <input type="file" name="file" class="form-control" accept="image/*" />
        <br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}