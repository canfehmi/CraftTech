@model CraftTech.WebUI.Areas.Admin.Models.Account.ChangePasswordDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Layout/_AdminLayout.cshtml";
}

<h2>Şifre Değiştir</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="CurrentPassword">Mevcut Şifreniz:</label>
        <input asp-for="CurrentPassword" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword">Yeni Şifreniz:</label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmNewPassword">Yeni Şifreyi Onayla:</label>
        <input asp-for="ConfirmNewPassword" class="form-control" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
</form>